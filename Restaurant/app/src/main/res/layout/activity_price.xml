<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
    android:background="@mipmap/tables"

android:layout_height="match_parent">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:id="@+id/view">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:popupTheme="@style/AppTheme.PopupOverlay" />

</android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pay"
    android:visibility="invisible"
    android:id="@+id/btnPay"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call WaÄ±ter"
        android:background="@mipmap/cwaiter"
        android:id="@+id/btnCallWaiter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:id="@+id/btnTotalAmount"
        android:background="@mipmap/totalprice"
        android:layout_alignParentBottom="true"
        android:textColor="#e43330"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/total"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btnPay"
        android:layout_toEndOf="@+id/btnTotalAmount"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff" />
</RelativeLayout>