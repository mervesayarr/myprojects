<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip">

    <TextView android:text="Vote Our Product" android:id="@+id/rank_dialog_text1"
        android:textSize="24dp" android:layout_marginTop="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RatingBar
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/dialog_ratingbar" android:layout_gravity="center"
        android:numStars="5" android:stepSize="1.0"

        android:isIndicator="false"/>

    <Button android:id="@+id/btnmyfavorite"
        android:layout_height="wrap_content"
        android:text="Add My Favorite"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="#ee0e51"
        android:textSize="20dip" android:layout_width="fill_parent" />


    <Button android:id="@+id/btncancel"
        android:layout_height="wrap_content"
        android:text="Cancel"  android:focusable="false"

        android:layout_margin="5dip" android:textColor="#ee0e51"
        android:textSize="20dip" android:layout_width="fill_parent" />

    <Button android:id="@+id/btnDelete"
        android:layout_height="wrap_content"
        android:text="Delete"  android:focusable="false"
        android:visibility="invisible"
        android:layout_margin="5dip" android:textColor="#ee0e51"
        android:textSize="20dip" android:layout_width="fill_parent" />
</LinearLayout>